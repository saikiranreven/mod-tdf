{
    "steps": [
      {
        "name": "python:3.9",
        "entrypoint": "pip",
        "args": ["install", "-r", "requirements.txt", "--user"]
      },
      {
        "name": "gcr.io/cloud-builders/gcloud",
        "args": [
          "run", "deploy", "live-clock",
          "--source=.",
          "--region=us-central1",
          "--platform=managed",
          "--allow-unauthenticated",
          "--set-env-vars=TZ=America/New_York",
          "--port=8080"
        ]
      }
    ],
    "options": {
      "logging": "CLOUD_LOGGING_ONLY",
      "machineType": "E2_HIGHCPU_8"
    },
    "timeout": "1200s"
  }