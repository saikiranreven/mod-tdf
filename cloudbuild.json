{
    "steps": [
      {
        "name": "gcr.io/cloud-builders/docker",
        "args": ["build", "-t", "gcr.io/$PROJECT_ID/time-display-app", "."]
      },
      {
        "name": "gcr.io/cloud-builders/docker",
        "args": ["push", "gcr.io/$PROJECT_ID/time-display-app"]
      },
      {
        "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
        "args": [
          "run", "deploy", "time-display-app",
          "--image=gcr.io/$PROJECT_ID/time-display-app",
          "--region=us-central1",
          "--platform=managed",
          "--allow-unauthenticated",
          "--port=8080"
        ]
      }
    ],
    "timeout": "1100s",
    "options": {
      "logging": "CLOUD_LOGGING_ONLY"
    }
  }